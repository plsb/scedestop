<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E8E8E8"
    android:padding="8dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Visita"
            android:textColor="#000"
            android:textSize="15dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(N-Normal / F-Fechada / Recus.-Recusada / Recup.-Recuperada)"
            android:textColor="#A12"
            android:textSize="13dip" />
        <!-- android:text="( 1-Normal / 2-Fechada / 3-Recusado / 4-Recuperado )" -->

        <RadioGroup
            android:id="@+id/RgTipoVisita"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/RbNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="10dip"
                android:text="N"
                android:textColor="#000" >
            </RadioButton>

            <RadioButton
                android:id="@+id/RbFechado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="10dip"
                android:text="F"
                android:textColor="#000" >
            </RadioButton>

            <RadioButton
                android:id="@+id/RbRecusado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="10dip"
                android:text="Recus."
                android:textColor="#000" >
            </RadioButton>

            <RadioButton
                android:id="@+id/RbRecuperado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="10dip"
                android:text="Recup."
                android:textColor="#000" >
            </RadioButton>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo Imóvel"
            android:textColor="#000"
            android:textSize="15dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(R-Residencial / C-Comércio / TB - Terreno Baldio / PE-Ponto Estratégico / O-Outros)"
            android:textColor="#A12"
            android:textSize="13dip" />

        <RadioGroup
            android:id="@+id/RgTipoImovel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/RbResidencial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:text="R"
                android:textColor="#000" >
            </RadioButton>

            <RadioButton
                android:id="@+id/RbComercio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:text="C"
                android:textColor="#000" >
            </RadioButton>

            <RadioButton
                android:id="@+id/RbTerrenoBaldio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:text="TB"
                android:textColor="#000" >
            </RadioButton>

            <RadioButton
                android:id="@+id/RbPontoEstrategico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:text="PE"
                android:textColor="#000" >
            </RadioButton>

            <RadioButton
                android:id="@+id/RbOutros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="4dip"
                android:text="O"
                android:textColor="#000" >
            </RadioButton>
        </RadioGroup>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Tipo Atividade"
                android:textColor="#000"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/SpAtividade"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Localização"
            android:textColor="#000"
            android:textSize="15dip" />

        <EditText
            android:id="@+id/edtLogradouro"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dip"
            android:enabled="false"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:layout_marginRight="40dip"
                android:text="Núm."
                android:textColor="#000"
                android:textSize="15dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="40dip"
                android:text="Comp."
                android:textColor="#000"
                android:textSize="15dip" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/EdtNum"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginRight="30dip"
                android:inputType="number"
                android:maxLines="1" />

            <EditText
                android:id="@+id/EdtComplemento"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginRight="30dip"
                android:inputType="textCapCharacters"
                android:maxLines="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:text="Código Doença"
                android:textColor="#000"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Spinner
                android:id="@+id/SpDoenca"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:text="Responsavel pelo Imóvel"
            android:textColor="#000"
            android:textSize="15dip" />

        <EditText
            android:id="@+id/EdtResponsavelImovel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:inputType="textCapCharacters"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/BtnContinuaVisita"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Continuar"
                android:textSize="18dp"
                android:background="#006400"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/BtnCancelarVisita"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cancelar"
                android:textSize="18dp"
                android:background="#FF0000"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>