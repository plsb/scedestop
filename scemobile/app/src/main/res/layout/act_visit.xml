<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TabWidget android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableLayout android:id="@+id/endereço"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:paddingTop="4dip">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="8dip" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <!-- inicio endereço-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dip"
                        android:layout_marginRight="40dip"
                        android:text="Núm."
                        android:textColor="#000"
                        android:textSize="15dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dip"
                        android:layout_marginLeft="40dip"
                        android:text="Comp."
                        android:textColor="#000"
                        android:textSize="15dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dip"
                        android:layout_marginLeft="50dip"
                        android:text="Quarteirão"
                        android:textColor="#000"
                        android:textSize="15dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/EdtNum"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginRight="30dip"
                        android:inputType="number"
                        android:maxLines="1" />

                    <EditText
                        android:id="@+id/EdtComplemento"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginRight="30dip"
                        android:inputType="textCapCharacters"
                        android:maxLines="1" />

                    <EditText
                        android:id="@+id/EdtQuarteirao"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginRight="30dip"
                        android:enabled="false"
                        android:focusable="false"
                        android:inputType="number"
                        android:maxLines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dip"
                    android:text="Responsavel pelo Imóvel"
                    android:textColor="#000"
                    android:textSize="15dip" />

                <EditText
                    android:id="@+id/EdtResponsavelImovel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:inputType="textCapCharacters"
                    android:maxLines="1" />

                <!-- Fim endereço-->


            </LinearLayout>

            </ScrollView>
            </TableLayout>

            <TableLayout android:id="@+id/inicio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:paddingTop="4dip">

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="8dip" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >
                <!-- Inicio das informações -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de Visita"
                        android:textColor="#000"
                        android:textSize="15dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Escolha uma das opções abaixo"
                        android:textColor="#A12"
                        android:textSize="13dip" />
                    <!-- android:text="( 1-Normal / 2-Fechada / 3-Recusado / 4-Recuperado )" -->

                    <RadioGroup
                        android:id="@+id/RgTipoVisita"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:orientation="vertical" >

                        <RadioButton
                            android:id="@+id/RbNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dip"
                            android:layout_marginRight="10dip"
                            android:text="Normal"
                            android:textColor="#000" >
                        </RadioButton>

                        <RadioButton
                            android:id="@+id/RbFechado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dip"
                            android:layout_marginRight="10dip"
                            android:text="Fechada"
                            android:textColor="#000" >
                        </RadioButton>

                        <RadioButton
                            android:id="@+id/RbRecusado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dip"
                            android:layout_marginRight="10dip"
                            android:text="Recusada"
                            android:textColor="#000" >
                        </RadioButton>

                        <RadioButton
                            android:id="@+id/RbRecuperado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dip"
                            android:layout_marginRight="10dip"
                            android:text="Recuperada"
                            android:textColor="#000" >
                        </RadioButton>
                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo Imóvel"
                        android:textColor="#000"
                        android:textSize="15dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(R-Residencial / C-Comércio / TB - Terreno Baldio / PE-Ponto Estratégico / O-Outros)"
                        android:textColor="#A12"
                        android:textSize="13dip" />

                    <RadioGroup
                        android:id="@+id/RgTipoImovel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/RbResidencial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:text="R"
                            android:textColor="#000" >
                        </RadioButton>

                        <RadioButton
                            android:id="@+id/RbComercio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dip"
                            android:layout_marginRight="4dip"
                            android:text="C"
                            android:textColor="#000" >
                        </RadioButton>

                        <RadioButton
                            android:id="@+id/RbTerrenoBaldio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dip"
                            android:layout_marginRight="4dip"
                            android:text="TB"
                            android:textColor="#000" >
                        </RadioButton>

                        <RadioButton
                            android:id="@+id/RbPontoEstrategico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dip"
                            android:layout_marginRight="4dip"
                            android:text="PE"
                            android:textColor="#000" >
                        </RadioButton>

                        <RadioButton
                            android:id="@+id/RbOutros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="4dip"
                            android:text="O"
                            android:textColor="#000" >
                        </RadioButton>
                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Tipo Atividade"
                            android:textColor="#000"
                            android:textSize="15dp" />

                        <Spinner
                            android:id="@+id/SpAtividade"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="5dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Localização"
                        android:textColor="#000"
                        android:textSize="15dip" />

                    <Spinner
                        android:id="@+id/SpLogradouro"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dip" />


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1"
                            android:text="Código Doença"
                            android:textColor="#000"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="2"
                            android:text="Cod. Bairro"
                            android:textColor="#000"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <Spinner
                            android:id="@+id/SpDoenca"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1" />

                        <EditText
                            android:id="@+id/EdtBairro"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="2"
                            android:enabled="false"
                            android:focusable="false"/>

                    </LinearLayout>

                </LinearLayout>
                </ScrollView>









            </TableLayout>

            <TableLayout android:id="@+id/outros"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:paddingTop="4dip">



            </TableLayout>

        </FrameLayout>

    </LinearLayout>

</TabHost>